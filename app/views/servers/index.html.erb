<h1>Servers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>IP Address</th>
      <th>Host Name</th>
      <th>Login Name</th>
      <th>Login Password</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= link_to server.name, server %></td>
        <td><%= server.ipaddress %></td>
        <td><%= server.hostname %></td>
        <td><%= server.loginname %></td>
        <td><%= server.loginpassword %></td>
        <td><%= link_to 'Edit', edit_server_path(server), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Server', new_server_path, class: "btn btn-success" %>
